<?xml version="1.0" encoding="utf-8"?>
<mujoco>

    <compiler angle="radian" meshdir="meshes/"/>
    <size njmax="500" nconmax="100"/>

    <option gravity="0 0 0" integrator="RK4" timestep="0.05"/>

    <asset>
        <mesh name="pedestal" file="pedestal.STL"/>
        <mesh name="base" file="base.STL"/>
        <mesh name="l0" file="l0.STL"/>
        <mesh name="head" file="head.STL"/>
        <mesh name="l1" file="l1.STL"/>
        <mesh name="l2" file="l2.STL"/>
        <mesh name="l3" file="l3.STL"/>
        <mesh name="l4" file="l4.STL"/>
        <mesh name="l5" file="l5.STL"/>
        <mesh name="l6" file="l6.STL"/>

        <texture name="tex_plane" type="2d" builtin="checker" rgb1=".2 .3 .4" rgb2=".1 0.15 0.2" width="512" height="512"/>
        <material name="mat_plane" reflectance="0.3" texture="tex_plane" texrepeat="1 1" texuniform="true"/>
1
    </asset>


    <worldbody>
        <!-- Lights -->
        <light directional="true" ambient="0.2 0.2 0.2" diffuse="0.8 0.8 0.8" specular="0.3 0.3 0.3" castshadow="false" pos="0 0 4" dir="0 0 -1" name="light0"/>

        <!-- Floor -->
        <geom name="floor" pos="0 0 -.913" size="20 20 .125" type="plane" material="mat_plane" condim="3"/>

        <!-- Robot -->
        <include file="sawyer_mujoco.xml"/>

        <body name="target" pos="0.5 -0.2 0.8">
			<geom conaffinity="0" contype="0" pos="0 0 0" rgba="0.9 0.2 0.2 1" size="0.01" type="sphere"/>
		</body>

    </worldbody>

